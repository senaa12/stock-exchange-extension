{
    "manifest_version": 2, 
    "name": "Stock exchange extension",
    "version": "1.0.0",

    "description": "Chrome extension for monitoring stock prices",

    "browser_action": {
        "default_popup": "index.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "storage"
    ]
}